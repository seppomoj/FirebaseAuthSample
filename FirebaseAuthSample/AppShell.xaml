<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirebaseAuthSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirebaseAuthSample"
    
    Shell.BackgroundColor="#3F84E5"
    
    Title="Caddie">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Login"
              
              ContentTemplate="{DataTemplate local:LoginPage}"
                      x:Name="loginScreen"/>
        
        
        <ShellContent Title="App MainPage" x:Name="mainPageMenuItem"
             
              ContentTemplate="{DataTemplate local:MainPage}" IsVisible="True"/>

    </FlyoutItem>

</Shell>
