<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirebaseAuthSample.LoginPage"
             Title="Login">

    <VerticalStackLayout>
        <StackLayout Margin="15" VerticalOptions="Center">
            <Label x:Name="labelLogin" Text="Login to app" FontAttributes="Bold" FontSize="Header" HorizontalOptions="Center"/>

        </StackLayout>
        <StackLayout Margin="15" VerticalOptions="Center">
            <Entry Placeholder="Email" Keyboard="Email" x:Name="emailEntry" Margin="20"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry" Margin="20"/>
            <Button x:Name="loginButton" Text="Login" Background="#3F84E5" TextColor="White" Clicked="LoginButton_Clicked" Margin="0,20,0,0"/>
            <Button x:Name="signUpButton" Text="Register (free)" Background="#3F84E5" TextColor="White" Clicked="SignUpButton_Clicked" Margin="0,20,0,0"/>
            <Button x:Name="PasswordResetButton" Text="Reset password" Background="#3F84E5" TextColor="White" Clicked="PasswordResetButton_Clicked" Margin="0,20,0,0" IsVisible="False"/>
        </StackLayout>
    </VerticalStackLayout>

</ContentPage>